generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model v_login {
  id            Int       @id @default(autoincrement())
  email         String    @unique(map: "email") @db.VarChar(255)
  username      String?   @db.VarChar(100)
  password_hash String    @db.VarChar(255)
  created_at    DateTime? @default(now()) @db.Timestamp(0)
  z_id          Int?
  locked        Boolean   @default(false)
  locked_until  DateTime? @db.DateTime(0)
  f_attempts    Int?      @default(0)
  v_created     Boolean?  @default(false)
}

model v_zakaznici {
  id          Int     @id @default(autoincrement())
  z_id        Int?    @default(0)
  z_name      String? @db.VarChar(40)
  z_surename  String? @db.VarChar(40)
  z_mail      String? @db.VarChar(50)
  z_mail_2    String? @db.VarChar(50)
  z_phone     String? @db.VarChar(30)
  z_pred_1    String? @db.VarChar(10)
  z_phone_2   String? @db.VarChar(30)
  z_pred_2    String? @db.VarChar(10)
  z_to_pay    Int?
  z_payed     Int?
  z_owner     String? @db.VarChar(50)
  z_type      String? @db.VarChar(50)
  z_adress    String? @db.VarChar(50)
  z_city      String? @db.VarChar(50)
  z_obcanstvi String? @db.VarChar(50)
  z_state     String? @db.VarChar(50)
  z_psc       String? @db.VarChar(50)
  z_pic       String  @default("basic-profile.jpg") @db.VarChar(255)
  z_web       String? @db.VarChar(50)
  patri_pod   String? @db.VarChar(30)
  pozice      String? @db.VarChar(50)
}

model predvolby {
  id        Int    @id @default(autoincrement())
  predvolba String @db.VarChar(10)
}

model staty {
  id        Int    @id @default(autoincrement())
  stat      String @db.VarChar(100)
  obcanstvi String @db.VarChar(100)
}

model v_added_emails {
  id           Int       @id @default(autoincrement()) @db.UnsignedInt
  email        String    @unique(map: "email") @db.VarChar(255)
  password     String?   @db.Text
  provider     String    @db.VarChar(100)
  oauth        Boolean   @default(false)
  accessToken  String?   @db.Text
  refreshToken String?   @db.Text
  expiresAt    DateTime? @db.DateTime(0)
  createdAt    DateTime  @default(now()) @db.DateTime(0)
  updatedAt    DateTime  @default(now()) @db.DateTime(0)
}
